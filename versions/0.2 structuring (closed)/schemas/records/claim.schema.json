{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/records/claim.schema.json",
  "title": "Claim Record",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "statement",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "statement": {
      "type": "string",
      "minLength": 1
    },
    "scope": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "assumptions": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "dependencies": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "status": {
      "type": "string",
      "enum": [
        "hypothesis",
        "lemma",
        "theorem",
        "empirical",
        "heuristic"
      ]
    },
    "confidence": {
      "type": "string",
      "enum": [
        "qualitative",
        "low",
        "medium",
        "high"
      ],
      "default": "qualitative"
    }
  }
}