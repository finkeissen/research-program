{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.local/schemas/envelope.schema.json",
  "title": "Artifact Envelope",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "id",
    "type",
    "schema_version",
    "payload"
  ],
  "properties": {
    "id": {
      "type": "string",
      "minLength": 1
    },
    "type": {
      "type": "string",
      "enum": [
        "claim",
        "concept",
        "measurement",
        "inference",
        "evidence",
        "validation",
        "decision_space",
        "atomic_problem"
      ]
    },
    "schema_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "record_version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$"
    },
    "created_at": {
      "type": "string",
      "format": "date-time"
    },
    "scope": {
      "type": "array",
      "items": {
        "type": "string"
      },
      "default": []
    },
    "provenance": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "source": {
          "type": "string"
        },
        "author": {
          "type": "string"
        },
        "driver": {
          "type": "string"
        },
        "commit": {
          "type": "string"
        },
        "notes": {
          "type": "string"
        }
      }
    },
    "links": {
      "type": "array",
      "default": [],
      "items": {
        "type": "object",
        "additionalProperties": false,
        "required": [
          "rel",
          "target"
        ],
        "properties": {
          "rel": {
            "type": "string",
            "enum": [
              "depends_on",
              "supports",
              "contradicts",
              "refines",
              "derived_from"
            ]
          },
          "target": {
            "type": "string"
          },
          "note": {
            "type": "string"
          }
        }
      }
    },
    "payload": {
      "type": "object"
    }
  }
}

